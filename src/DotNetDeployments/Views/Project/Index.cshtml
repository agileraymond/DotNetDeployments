@model IEnumerable<DotNetDeployments.Models.ProjectModel>

@{
    ViewData["Title"] = "Projects";
}

<h2>Projects</h2>

<p>
    <a asp-action="Add">Add</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                <label class="control-label">Solution Name</label>
            </th>
            <th>
                <label class="control-label">Project Name</label>
            </th>
            <th>
                <label class="control-label">Project Type</label>
            </th>
            <th>
                <label class="control-label">AWS Application Name</label>
            </th>            
            <th></th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.SolutionName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ProjectName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ProjectType)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.AwsAppName)
                </td>                
                <td>
                    @Html.ActionLink("Deployment Config", "Edit", "DeploymentConfiguration", new { id = item.AwsAppName }) 
                </td>
                <td>
                    @Html.ActionLink("Delete", "Delete", "Project", new { id = item.SolutionName, projectName = item.ProjectName })
                </td>
            </tr>
        }
    </tbody>
</table>
